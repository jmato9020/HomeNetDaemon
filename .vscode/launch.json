{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    

    {
      "name": "C#: HomeNetDaemon.Web Debug",
      "type": "dotnet",
      "request": "launch",
      "projectPath": "${workspaceFolder}/HomeNetDaemon.Web/HomeNetDaemon.Web.csproj"
    },
    
    {
      "name": "Launch and Debug Standalone Blazor WebAssembly App",
      "type": "blazorwasm",
      "request": "launch",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": ".NET MAUI",
      "type": "maui",
      "request": "launch",
      "preLaunchTask": "maui: Build"
    },
    {
      "name": ".NET Core Launch (web)",
      "type": "coreclr",
      "request": "launch",
      "program": "dotnet",
      "args": [
        "watch",
        "--project",
        ".",
        "--verbose"
      ],
      "cwd": "${workspaceFolder}/HomeNetDaemon.Web/",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      
    },
  ]
}